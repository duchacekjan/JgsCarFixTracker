{
  "rules": {
    "users":{
      ".indexOn":["uid"],
    	"$uid": {
        ".write": "$uid === auth.uid ||!data.exists() || !newData.exists()",
        ".read": "$uid === auth.uid"
	    }
    },
    "items":{
      "$uid":{
        ".write": "$uid === auth.uid||!data.exists() || !newData.exists()",
        ".read": "$uid === auth.uid"
      }
    }
  }
}